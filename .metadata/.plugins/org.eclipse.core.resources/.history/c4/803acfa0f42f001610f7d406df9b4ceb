		String sendMessageURL = "http://newsms.designhost.in/index.php/smsapi/httpapi";
		URL obj = new URL(sendMessageURL);
		HttpURLConnection con = (HttpURLConnection) obj.openConnection();
		String urlParameters ="uname=vivek&password=123456&sender=FATHCK&receiver=9886652394&route=PSA&msgtype=1&sms=Mr.%20Ashwath%2C%20thank%20you%20for%20taking%20time%20out%20and%20providing%20valuable%20feedback";
		http.sendPost(sendMessageURL, urlParameters, con);

